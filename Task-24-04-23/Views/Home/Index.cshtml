@model  IEnumerable<Task_24_04_23.Models.Exercise>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>

            <th>
                Id
            </th>

            <th>
                Name
            </th>

            <th>
                Email
            </th>

            <th>
                Gender
            </th>

            <th>
                Division
            </th>

            <th>
                City
            </th>

        </tr>

        @foreach (var item in ViewBag.model)
        {
            <tr>

                <td>
                    @item.Id
                </td>

                <td>
                    @item.Name
                </td>

                <td>
                    @item.Email
                </td>

                <td>
                    @item.Gender
                </td>

                <td>
                    @item.Division
                </td>

                <td>
                    @item.City
                </td>


                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

}